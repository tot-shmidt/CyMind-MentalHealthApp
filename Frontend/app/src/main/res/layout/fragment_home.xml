<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/welcomeMessage"
                android:layout_width="326dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:paddingLeft="25dip"
                android:text="Welcome [insert name]!"
                android:textSize="24pt"
                app:layout_constraintBaseline_toBaselineOf="parent"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageButton
                android:id="@+id/buttonProfile"
                android:src="@drawable/profile"
                android:layout_width="75dip"
                android:layout_height="75dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                android:text="Profile"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

        <Space
            android:id="@+id/space"
            android:layout_width="wrap_content"
            android:layout_height="100dip"
            app:layout_constraintBottom_toTopOf="@+id/moodButtonHappy"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/welcomeMessage" />

        <TextView
            android:id="@+id/moodMessage"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:textAlignment="center"
            android:textSize="12pt"
            android:text="How are you feeling today?"/>

        <TextView
            android:id="@+id/moodMessage2"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:text="ðŸ˜­                                             ðŸ˜ƒ"
            android:textAlignment="center"
            android:textSize="12pt" />

        <SeekBar
            android:id="@+id/moodSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="5"
            android:min="1"
            android:progress="3" />

        <Space
            android:id="@+id/space2"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonChat"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toStartOf="parent" />



    </LinearLayout>


    <!-- TODO: generic app information -->

    <!-- TODO: mood tracking -->


    <!-- TODO: page-to-page navigation menu -->


</FrameLayout>
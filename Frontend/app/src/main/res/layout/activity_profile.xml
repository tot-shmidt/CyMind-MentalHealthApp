<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileActivity"
    android:background="@color/colorAccent">

    <Button
        android:id="@+id/returnButton"
        android:layout_width="75dip"
        android:layout_height="75dip"
        android:text="X"
        android:textSize="18pt"
        android:layout_marginTop="-10dip"
        android:layout_marginStart="-10dp"
        android:paddingRight="7dp"
        android:paddingTop="0dp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/returnButton">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nameText"
                android:layout_width="200dip"
                android:layout_height="30dip"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dip"
                android:text="User's Name"
                android:textSize="12pt" />

            <TextView
                android:id="@+id/ageText"
                android:layout_width="150dip"
                android:layout_height="30dip"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dip"
                android:text="User's Age"
                android:textSize="12pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/emailText"
                android:layout_width="380dip"
                android:layout_height="30dip"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dip"
                android:text="User's Email"
                android:textSize="12pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/majorText"
                android:layout_width="200dip"
                android:layout_height="30dip"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dip"
                android:layout_weight="1"
                android:text="User's Major"
                android:textSize="12pt" />

            <TextView
                android:id="@+id/yearOfStudyText"
                android:layout_width="150dip"
                android:layout_height="30dip"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dip"
                android:layout_weight="1"
                android:text="User's YoS"
                android:textSize="12pt" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dip"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="200dip"
                android:layout_height="65dip"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dip"
                android:ems="10"
                android:hint="New name"
                android:inputType="text" />

            <EditText
                android:id="@+id/ageEditText"
                android:layout_width="150dip"
                android:layout_height="65dip"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dip"
                android:ems="10"
                android:hint="New age"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dip"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="380dip"
                android:layout_height="65dip"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dip"
                android:ems="10"
                android:hint="New email"
                android:inputType="textEmailAddress" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dip"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/majorEditText"
                android:layout_width="200dip"
                android:layout_height="65dip"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dip"
                android:ems="10"
                android:inputType="text"
                android:hint="New major" />

            <EditText
                android:id="@+id/yearOfStudyEditText"
                android:layout_width="150dip"
                android:layout_height="65dip"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dip"
                android:ems="10"
                android:inputType="text"
                android:hint="New yr. of study" />

        </LinearLayout>

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="200dip"
            android:layout_height="65dip"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:layout_margin="15dip"
            android:hint="Confirm password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/updateProfileButton"
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dip"
            android:text="Update Information" />

        <Button
            android:id="@+id/deleteProfileButton"
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Delete User Profile" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>